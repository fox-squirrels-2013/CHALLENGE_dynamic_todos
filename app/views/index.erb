<div id="todo">
  <div class="toolbox">
    <form id='new_todo' action='/create' method='post'>
      <input type="text" class="add_todo" name='todo[task]'/>
      <input type='submit' value='Add Todo'>
    </form>
  </div>

  <div class="todo_list">

    <% @todos.each do |todo| %>
    <div id="<%= todo.id %>" class="todo <%= 'complete' if todo.complete  %>">
      <h2><%= todo.task %></h2>
      <ul>
        <li><a href="#" class="delete" ><i class="fa fa-trash-o fa-2x delete"></i></a></li>
        <li><a href="#" class="complete"><i class="fa fa-star-o fa-2x complete"></i></a></li>
      </ul>
    </div>
    <% end %>

  </div>
</div>